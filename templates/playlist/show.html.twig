{% extends 'base.html.twig' %}

{% block title %}Playlist{% endblock %}

{% block body %}
	<h1>Playlist</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ playlist.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ playlist.name }}</td>
			</tr>
			<tr>
				<th>Musics</th>
				<td>
					{% set i = 1 %}
					{% for music in musics %}
						<tr>
							<th>{{ i }}</th>
							<td>{{ music.title }}</td>
							<td>
								<a href="{{ path('app_playlist_music_show', {'playlist_id': playlist.id, 'music_id' : music.id}) }}">{{ music }}</a>
							</td>
						</tr>
						{% set i = i+1 %}
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_membre_show', {'id': playlist.membre.id}) }}">Playlists</a>
	<br>
	<a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}">Edit this Playlist</a>
	<br>
	{{ include('playlist/_delete_form.html.twig') }}
{% endblock %}
