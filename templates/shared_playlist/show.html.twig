{% extends 'base.html.twig' %}

{% block title %}SharedPlaylist
{% endblock %}


{% block main %}
	<h1>SharedPlaylist</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ shared_playlist.id }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ shared_playlist.description }}</td>
			</tr>
			<tr>
				<th>Published</th>
				<td>{{ shared_playlist.published ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Musics</th>
				<td>
					<ul>
						{% for music in shared_playlist.musics %}
							<li>
								<a href="{{ path('app_shared_playlist_music_show', {'shared_playlist_id': shared_playlist.id, 'music_id' : music.id}) }}">{{ music }}</a>
							</li>
						{% endfor %}
					</ul>
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_shared_playlist_index') }}">back to list</a>

	<a href="{{ path('app_shared_playlist_edit', {'id': shared_playlist.id}) }}">edit</a>

	{{ include('shared_playlist/_delete_form.html.twig') }}


{% endblock %}
